#!/bin/sh

# see http://blog.lanyonm.org/articles/2015/01/11/raspberry-pi-init-script-python.html

#
# init script for telewall-application
#

### BEGIN INIT INFO
# Provides:          telewall-application
# Required-Start:    $remote_fs $syslog $network
# Required-Stop:     $remote_fs $syslog $network
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: init script for the telewall-application box
# Description:       We'll have to fill this out later...
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
NAME=telewall-app
export PYTHONPATH="/telewall/"
DAEMON="/telewall/py2-env/bin/python"
DAEMONARGS="/telewall/telewall/application/main.py"
PIDFILE=/var/run/$NAME.pid
LOGFILE=/var/log/$NAME.stdout.log

. /lib/lsb/init-functions

case "$1" in
   start)
       start-stop-daemon --start --background \
          --pidfile $PIDFILE --make-pidfile --startas /bin/bash \
          -- -c "exec stdbuf -oL -eL $DAEMON $DAEMONARGS > $LOGFILE 2>&1"
          log_end_msg $?
       ;;
   stop)
       start-stop-daemon --stop --pidfile $PIDFILE
       log_end_msg $?
       rm -f $PIDFILE
       ;;
   restart)
       $0 stop
       $0 start
       ;;
   status)
       start-stop-daemon --status --pidfile $PIDFILE
       log_end_msg $?
       ;;
   *)
       echo "Usage: $0 {start|stop|restart|status}"
       exit 2
       ;;
esac

exit 0
